{
  "title": "JSON schema for Release Drafter yaml files",
  "id": "https://github.com/release-drafter/release-drafter/blob/master/schema.json",
  "type": "object",
  "properties": {
    "references": {
      "type": "array",
      "default": ["master"],
      "items": {
        "type": "string"
      }
    },
    "change-template": {
      "type": "string",
      "default": "'* $TITLE ($SHA) (#$NUMBER) @$AUTHOR'"
    },
    "change-title-escapes": {
      "type": "string",
      "default": ""
    },
    "no-changes-template": {
      "type": "string",
      "default": "'* No changes'"
    },
    "version-template": {
      "type": "string",
      "default": "$MAJOR.$MINOR.$PATCH$PRERELEASE"
    },
    "name-template": {
      "type": "string",
      "default": ""
    },
    "tag-prefix": {
      "type": "string",
      "default": ""
    },
    "tag-template": {
      "type": "string",
      "default": ""
    },
    "include-paths": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "exclude-contributors": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "no-contributors-template": {
      "type": "string",
      "default": "No contributors"
    },
    "sort-by": {
      "type": "string",
      "default": "merged_at",
      "enum": ["merged_at", "title"]
    },
    "sort-direction": {
      "type": "string",
      "default": "descending",
      "enum": ["ascending", "descending"]
    },
    "prerelease": {
      "type": "boolean",
      "default": false
    },
    "prerelease-identifier": {
      "type": "string",
      "default": ""
    },
    "latest": {
      "type": "string",
      "default": "true"
    },
    "filter-by-commitish": {
      "type": "boolean",
      "default": false
    },
    "include-pre-releases": {
      "type": "boolean",
      "default": false
    },
    "commitish": {
      "type": "string",
      "default": ""
    },
    "pull-request-limit": {
      "type": "number",
      "default": 5,
      "exclusiveMinimum": 0
    },
    "replacers": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "search": {
            "type": "string"
          },
          "replace": {
            "type": "string"
          }
        },
        "required": ["search", "replace"],
        "additionalProperties": false
      }
    },
    "categories": {
      "type": "array",
      "default": [
        {
          "title": "Features",
          "collapse-after": 0,
          "commit-types": ["feat"]
        },
        {
          "title": "Bug Fixes",
          "collapse-after": 0,
          "commit-types": ["fix"]
        },
        {
          "title": "Documentation",
          "collapse-after": 0,
          "commit-types": ["docs"]
        },
        {
          "title": "Styles",
          "collapse-after": 0,
          "commit-types": ["style"]
        },
        {
          "title": "Code Refactoring",
          "collapse-after": 0,
          "commit-types": ["refactor"]
        },
        {
          "title": "Performance Improvements",
          "collapse-after": 0,
          "commit-types": ["perf"]
        },
        {
          "title": "Tests",
          "collapse-after": 0,
          "commit-types": ["test"]
        },
        {
          "title": "Build System",
          "collapse-after": 0,
          "commit-types": ["build"]
        },
        {
          "title": "Continuous Integration",
          "collapse-after": 0,
          "commit-types": ["ci"]
        },
        {
          "title": "Chores",
          "collapse-after": 0,
          "commit-types": ["chore"]
        },
        {
          "title": "Reverts",
          "collapse-after": 0,
          "commit-types": ["revert"]
        }
      ],
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "collapse-after": {
            "type": "integer",
            "default": 0,
            "minimum": 0
          },
          "commit-types": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["title"],
        "additionalProperties": false
      }
    },
    "version-resolver": {
      "type": "object",
      "default": {
        "pre-one-zero-minor-for-breaking": true,
        "no-auto-major": true,
        "default": "patch"
      },
      "properties": {
        "pre-one-zero-minor-for-breaking": {
          "type": "boolean",
          "default": true
        },
        "no-auto-major": {
          "type": "boolean",
          "default": true
        },
        "default": {
          "type": "string",
          "default": "patch",
          "enum": ["major", "minor", "patch"]
        }
      },
      "additionalProperties": false
    },
    "category-template": {
      "type": "string",
      "default": "## $TITLE"
    },
    "header": {
      "type": "string",
      "default": ""
    },
    "template": {
      "type": "string"
    },
    "footer": {
      "type": "string",
      "default": ""
    },
    "_extends": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
