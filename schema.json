{
  "title": "JSON schema for Semantic PR Release Drafter yaml files",
  "id": "https://github.com/aaronsteers/semantic-pr-release-drafter/blob/main/schema.json",
  "type": "object",
  "properties": {
    "references": {
      "type": "array",
      "default": ["main"],
      "items": {
        "type": "string"
      }
    },
    "change-template": {
      "type": "string",
      "default": "'* $TITLE ($COMMIT) (#$NUMBER) @$AUTHOR'"
    },
    "change-title-escapes": {
      "type": "string",
      "default": ""
    },
    "no-changes-template": {
      "type": "string",
      "default": "'* No changes'"
    },
    "version-template": {
      "type": "string",
      "default": "$MAJOR.$MINOR.$PATCH$PRERELEASE"
    },
    "name-template": {
      "type": "string",
      "default": ""
    },
    "tag-prefix": {
      "type": "string",
      "default": ""
    },
    "tag-template": {
      "type": "string",
      "default": ""
    },
    "include-paths": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "exclude-contributors": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "no-contributors-template": {
      "type": "string",
      "default": "No contributors"
    },
    "sort-by": {
      "type": "string",
      "default": "merged_at",
      "enum": ["merged_at", "title"]
    },
    "sort-direction": {
      "type": "string",
      "default": "descending",
      "enum": ["ascending", "descending"]
    },
    "prerelease": {
      "type": "boolean",
      "default": false
    },
    "prerelease-identifier": {
      "type": "string",
      "default": ""
    },
    "latest": {
      "type": "string",
      "default": "true"
    },
    "filter-by-commitish": {
      "type": "boolean",
      "default": false
    },
    "include-pre-releases": {
      "type": "boolean",
      "default": false
    },
    "commitish": {
      "type": "string",
      "default": ""
    },
    "replacers": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "search": {
            "type": "string"
          },
          "replace": {
            "type": "string"
          }
        },
        "required": ["search", "replace"],
        "additionalProperties": false
      }
    },
    "categories": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "collapse-after": {
            "type": "integer",
            "default": 0,
            "minimum": 0
          },
          "commit-types": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["title"],
        "additionalProperties": false
      }
    },
    "version-resolver": {
      "type": "object",
      "default": {
        "pre-one-zero-minor-for-breaking": true,
        "no-auto-major": true,
        "default": "patch"
      },
      "properties": {
        "pre-one-zero-minor-for-breaking": {
          "type": "boolean",
          "default": true,
          "description": "When true, breaking changes before v1.0 bump minor instead of major"
        },
        "no-auto-major": {
          "type": "boolean",
          "default": true,
          "description": "When true, breaking changes bump minor by default; users manually bump major when warranted"
        },
        "default": {
          "type": "string",
          "default": "patch",
          "enum": ["major", "minor", "patch"]
        }
      },
      "additionalProperties": false
    },
    "category-template": {
      "type": "string",
      "default": "## $TITLE"
    },
    "header": {
      "type": "string",
      "default": ""
    },
    "template": {
      "type": "string"
    },
    "footer": {
      "type": "string",
      "default": ""
    },
    "_extends": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
